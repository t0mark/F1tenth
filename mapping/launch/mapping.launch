<launch>
  <!-- Cartographer node wiring wheel odom, 2D lidar, and IMU -->
  <node pkg="cartographer_ros"
        type="cartographer_node"
        name="cartographer_node"
        output="screen"
        args="-configuration_directory $(find mapping)/config -configuration_basename mapping.lua">
    <remap from="imu" to="/camera/imu"/>
    <remap from="odom" to="odom"/>
  </node>

  <!-- Occupancy grid publisher built from Cartographer submaps -->
  <node pkg="cartographer_ros"
        type="cartographer_occupancy_grid_node"
        name="cartographer_occupancy_grid_node"
        output="screen">
    <param name="resolution" value="0.05"/>
  </node>
</launch>
